apiVersion: operator.ibm.com/v1alpha1
kind: OperandRequest
metadata:
  name: common-service
  namespace: ibm-common-services
spec:
  requests:
    - operands:
        - name: ibm-cert-manager-operator
        - name: ibm-iam-operator
        - name: ibm-healthcheck-operator
        - name: ibm-management-ingress-operator
        - name: ibm-licensing-operator
        - name: ibm-commonui-operator
        - name: ibm-platform-api-operator
{% if  ics_cases[ics_version_hint|int] in [0 1 2 3 4] %}
        - name: ibm-ingress-nginx-operator
{% endif %}
{% if ics_operands[0] == 'Y' %}
        - name: ibm-zen-operator
{% endif %}
{% if ics_cases[ics_version_hint|int] == 5 and ics_operands[0] == 'Y' %}
        - name: zen-cpp-operator
{% endif %}
{% if ics_operands[1] == 'Y' %}
        - name: ibm-monitoring-exporters-operator
        - name: ibm-monitoring-prometheusext-operator
        - name: ibm-monitoring-grafana-operator
{% endif %}
{% if ics_operands[2] == 'Y' %}
        - name: ibm-events-operator
{% endif %}
{% if ics_operands[3] == 'Y' %}
        - name: ibm-auditlogging-operator
{% endif %}
{% if ics_operands[4] == 'Y' and ics_cases[ics_version_hint|int] == 1 %}
        - name: ibm-metering-operator
{% endif %}
{% if ics_operands[5] == 'Y' %}
        - name: ibm-mongodb-operator
{% endif %}
{% if ics_operands[6] == 'Y' %}
        - name: ibm-elastic-stack-operator
{% endif %}
{% if ics_cases[ics_version_hint|int] == 5 %}
        - name: ibm-user-data-services-operator
        - name: ibm-cpd-ae-operator
        - ibm-apicatalog-operator
{% endif %}
      registry: common-service
